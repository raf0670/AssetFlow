<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.assetflow.HistoryController"
      style="-fx-background-color: #f4f4f4;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Transaction History" styleClass="history-header-label"/>

    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="filter-bar">
        <Label text="Filter by Date:" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="filterDate" promptText="Pick a date"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Clear Filter" onAction="#clearFilter" styleClass="btn-clear"/>
    </HBox>

    <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colDate" text="Date"/>
            <TableColumn fx:id="colDesc" text="Description"/>
            <TableColumn fx:id="colCat" text="Category"/>
            <TableColumn fx:id="colAmt" text="Amount"/>
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <placeholder>
            <Label text="No expenses found for this date"/>
        </placeholder>
    </TableView>

</VBox>
