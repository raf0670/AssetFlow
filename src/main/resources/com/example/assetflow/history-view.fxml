<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.assetflow.HistoryController"
      style="-fx-background-color: #f4f4f4;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT">
        <Label text="Transaction History" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <Region HBox.hgrow="ALWAYS"/> </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 10;">
        <Label text="Filter by Date:" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="filterDate" promptText="Pick a date"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Clear Filter" onAction="#clearFilter" style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;"/>
    </HBox>

    <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colDate" text="Date"/>
            <TableColumn fx:id="colDesc" text="Description"/>
            <TableColumn fx:id="colCat" text="Category"/>
            <TableColumn fx:id="colAmt" text="Amount"/>
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <placeholder>
            <Label text="No expenses found for this date"/>
        </placeholder>
    </TableView>

</VBox>
