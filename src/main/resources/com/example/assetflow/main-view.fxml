<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.chart.PieChart?>
<VBox prefHeight="669.0" prefWidth="900.0" spacing="10" style="-fx-background-color: #f4f4f4;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.assetflow.HelloController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label styleClass="h2" text="Asset Flow" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#onHistoryButtonClick" styleClass="btn, btn-primary" text="History" />
        <Button fx:id="btnAdd" onAction="#onAddButtonClick" styleClass="add-button" text="+ Add Expense" />
    </HBox>

    <Separator />

    <HBox alignment="CENTER" spacing="20">
        <VBox prefWidth="200" styleClass="panel">
            <Label styleClass="panel-title" text="Total Spent" />
            <Label fx:id="lblTotal" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" text="\$0.00" />
        </VBox>
    </HBox>

    <Button text="View Analytics" onAction="#onToggleChart" styleClass="btn-primary"/>

    <HBox spacing="15" VBox.vgrow="ALWAYS">
        <TableView fx:id="expenseTable" HBox.hgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDescription" text="Description" />
                <TableColumn fx:id="colCategory" text="Category" />
                <TableColumn fx:id="colAmount" text="Amount" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <PieChart fx:id="categoryChart" managed="false" visible="false" title="Spending by Category" prefWidth="400"/>
    </HBox>

</VBox>
